<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign"
    tools:context=".MakePostActivity">

    <Switch
        android:id="@+id/twitterPostSwitch3"
        android:layout_width="261dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:button="@drawable/instagramicon"
        android:checked="false"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:text="Instagram"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/twitterPostSwitch"
        app:layout_constraintTop_toBottomOf="@+id/twitterPostSwitch"
        tools:visibility="visible" />

    <Switch
        android:id="@+id/fbPostSwitch"
        android:layout_width="261dp"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:button="@drawable/facebookicon"
        android:checked="false"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:text="Facebook"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/makePostTxt"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/addImageButton"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/makePostTxt"
        android:layout_width="362dp"
        android:layout_height="194dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoMakePost" />

    <Switch
        android:id="@+id/twitterPostSwitch"
        android:layout_width="261dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:button="@drawable/twittericon"
        android:checked="false"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:text="Twitter"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/fbPostSwitch"
        app:layout_constraintTop_toBottomOf="@+id/fbPostSwitch"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/infoMakePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Publish Post Now!"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/publishPostButton"
        android:layout_width="142dp"
        android:layout_height="82dp"
        android:layout_marginTop="32dp"
        android:text="SHARE"
        app:icon="@android:drawable/ic_menu_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twitterPostSwitch3" />

</androidx.constraintlayout.widget.ConstraintLayout>